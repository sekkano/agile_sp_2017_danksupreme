<div id="model" class="popupContainer">
  <header class="popupHeader">
    <span class="header_title">Login</span>
    <span class="model_close">
		  <img src="assets/img/xSymbol.png">
		</span>
  </header>
  <section class="popupBody">
    <div class="social_login">
      <div class="">
        <a href="https://www.facebook.com/" target="_blank" class="social_box fb">
          <img class="icon" src="assets/img/facebookLogo.png">
          <span class="icon_title">Connect with Facebook</span>
        </a>
        <a href="https://plus.google.com/" target="_blank" class="social_box google">
          <img class="icon" src="assets/img/googlePlusLogo.png">
          <span class="icon_title">Connect with Google Plus</span>
        </a>
      </div>
      <div class="centeredText">
        <span>Or use your Email address</span>
      </div>
      <div class="action_btns">
        <div class="one_half"><a href="#" id="login_form" class="btn">Login</a></div>
        <div class="one_half last"><a href="#" id="register_form" class="btn">Sign up</a></div>
      </div>
    </div>
    <div class="user_login">
      <form>
        <label>Email / Username</label>
        <input type="text"/>
        <br/>
        <label>Password</label>
        <input type="password"/>
        <br/>
        <div class="action_btns">
          <div class="one_half">
            <a href="#" class="btn back_btn"><i class="fa fa-angle-double-left"></i> Back</a>
          </div>
          <div class="one_half last"><a href="#" class="btn btn_blue">Login</a></div>
        </div>
      </form>
      <a href="#" class="forgot_password">Forgot password?</a>
    </div>
    <div class="user_register">
      <form>
        <label>Full Name</label>
        <input type="text"/>
        <br/>
        <label>Email Address</label>
        <input type="email"/>
        <br/>
        <label>Password</label>
        <input type="password"/>
        <br/>
        <div class="action_btns">
          <div class="one_half">
            <a href="#" class="btn back_btn"><i class="fa fa-angle-double-left"></i> Back</a>
          </div>
          <div class="one_half last"><a href="#" class="btn btn_blue">Register</a></div>
        </div>
      </form>
    </div>
  </section>
</div>